<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" lang="en" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/Content/homecss.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand " href="/home/index">NoBrand Sport</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Men</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Women</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Kids</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sale</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sport</a>
                    </li>
                </ul>
            </div>
            <form class="form-inline my-2 my-lg-0 ml-auto " action="/BoSuuTap/Collection">
                <div class="input-group">
                    <input id="search" 
                           name="search"
                           class="form-control w-auto" 
                           type="search" 
                           value="@ViewBag.Search"
                           placeholder="Search" 
                           aria-label="Search">
                    <div class="input-group-append">
                        <button id="searchButton" class="btn btn-outline-secondary" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fa fa-heart"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fa fa-shopping-cart"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/LogIn"><i class="fa fa-user"></i></a>
                </li>
            </ul>
        </nav>
        @RenderBody()
        <footer class="bg-dark text-center text-white">
            <div class="container p-4">
                <section class="">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                            <ul class="list-unstyled mb-0 ">
                                <li>
                                    <a href="#!" class="text-white tc">FIND A STORE</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-white tc">BECOME A MEMBER</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-white tc">SEND US FEEDBACK</a>
                                </li>

                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#!" class="text-white tc">GET HELP</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-secondary tc ">Contact us</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-secondary tc ">Payment options</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-secondary tc ">Shipping and delivery</a>
                                </li>
                            </ul>
                        </div>



                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#!" class="text-white tc">ABOUT US</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-secondary tc ">News</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-secondary tc ">Careers</a>
                                </li>
                                <li>
                                    <a href="#!" class="text-secondary tc ">Company</a>
                                </li>

                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                            <!-- Facebook -->
                            <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                                <i class="fab fa-facebook-f"></i>
                            </a>

                            <!-- Twitter -->
                            <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                                <i class="fab fa-twitter"></i>
                            </a>

                            <!-- Google -->
                            <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                                <i class="fab fa-google"></i>
                            </a>

                            <!-- Instagram -->
                            <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>

                    </div>
                </section>
            </div>

            <div class="text-center text-secondary p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                &copy; 2023 NoBrandFashion,Inc
            </div>
        </footer>
    </div>
  
</body>
</html>
