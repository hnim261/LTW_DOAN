@model DoAn_LTW2.Models.product

@{
    ViewBag.Title = "Detail Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container-fluid pt-2">
    <a class="btn btn-success" href="/BoSuuTap/Collection"><i class="fas fa-arrow-left"></i> Trở lại</a>
    <div class="row">
        <div class="col">
            <img src="~/Content/hinhanh/@Model.image" alt="Image detail product" style="width:85%;height:94%" />
        </div>
        <div class="col">
            <div class="row">@Model.Description</div>
            <div class="row pt-3 pb-3 text-uppercase" style="font-size:40px">@Model.ProductName</div>
            <div class="row" style="font-size:20px; font-weight:bold">@Model.Price$</div>
            <div class="row-sm m-5">
                <button type="button" class="btn btn-dark btn-lg mt-2">Thêm vào giỏ hàng <i class="fa fa-shopping-cart"></i></button>
            </div>
        </div>
    </div>
</div>




